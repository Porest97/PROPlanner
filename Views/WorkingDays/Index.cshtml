@model IEnumerable<PROPlanner.Models.DataModels.WorkingDay>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkingDayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkingDayStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkingDayEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoursWorked)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkingDayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkingDayStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkingDayEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursWorked)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
